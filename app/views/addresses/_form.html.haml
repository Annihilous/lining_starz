= simple_form_for(@address) do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :street_line_1, input_html: { class: "form-control" }
    .form-group
      = f.input :street_line_2, input_html: { class: "form-control" }
    .form-group
      = f.input :city, input_html: { class: "form-control" }
    .form-group
      = f.input :state, input_html: { class: "form-control" }
    .form-group
      = f.input :zip, input_html: { class: "form-control" }
    .form-group
      = f.input :latitude, input_html: { class: "form-control" }
    .form-group
      = f.input :longitude, input_html: { class: "form-control" }

  .form-actions
    = f.button :submit, class: "btn btn-primary"