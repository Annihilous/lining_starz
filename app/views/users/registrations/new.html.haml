.container.container-sm
  .pad-section
    %h2 Sign up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      .form-inputs
        %br
        = f.input :email, required: true, label: false, placeholder: "email", autofocus: true, :input_html => { :class => "form-control"}
        %br
        = f.input :password, required: true, label: false, placeholder: "password", :input_html => { :class => "form-control"}
        %br
        = f.input :password_confirmation, label: false, placeholder: "password confirmation", required: true, :input_html => { :class => "form-control"}
      %br
      .form-actions
        = f.button :submit, "Sign up", class: "btn-primary-outline btn-block"
