.container.container-sm
  .pad-section
    %h2 New Session
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        %br
        = f.input :email, required: false, autofocus: true, :input_html => { :class => "form-control"}, label: false, placeholder: "email"
        %br
        = f.input :password, required: false, :input_html => { :class => "form-control"}, label: false, placeholder: "password"

        .form-checkbox
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, "Log in", class: "btn-primary-outline btn-block"
