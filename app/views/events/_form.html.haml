= simple_form_for(@event) do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :name, input_html: { class: "form-control" }
    .form-group
      = f.input :description, input_html: { class: "form-control" }
    .form-group
      = f.input :start_dts, input_html: { class: "form-control" }
    .form-group
      = f.input :end_dts, input_html: { class: "form-control" }
    .form-group
      = f.input :contact_id, input_html: { class: "form-control" }
    .form-group
      = f.input :slug, input_html: { class: "form-control" }

  = f.simple_fields_for(@address) do |a|

    .form-inputs
      .form-group
        = a.input :street_line_1, input_html: { class: "form-control" }
      .form-group
        = a.input :street_line_2, input_html: { class: "form-control" }
      .form-group
        = a.input :city, input_html: { class: "form-control" }
      .form-group
        = a.input :state, input_html: { class: "form-control" }
      .form-group
        = a.input :zip, input_html: { class: "form-control" }
      .form-group
        = a.input :latitude, input_html: { class: "form-control" }
      .form-group
        = a.input :longitude, input_html: { class: "form-control" }

  .form-actions
    = f.button :submit, class: "btn btn-primary"
